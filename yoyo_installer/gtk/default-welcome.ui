<?xml version="1.0" encoding="UTF-8"?>
<interface>
    <requires lib="gtk" version="4.0"/>
    <requires lib="libadwaita" version="1.0" />
    <template class="YoyoDefaultWelcome" parent="AdwBin">
        <property name="halign">fill</property>
        <property name="valign">fill</property>
        <property name="hexpand">true</property>
        <child>
            <object class="AdwStatusPage" id="status_page">
                <child>
                    <object class="GtkBox">
                        <property name="orientation">vertical</property>
                        <property name="valign">center</property>
                        <property name="halign">center</property>
                        <child>
                            <object class="GtkImage">
                                <property name="icon-name">yoyo-logo-text</property>
                                <property name="pixel-size">192</property>
                            </object>
                        </child>
                        <child>
                            <object class="GtkBox">
                                <property name="margin-bottom">120</property>
                                <property name="spacing">20</property>
                                <property name="homogeneous">true</property>
                                <property name="valign">center</property>
                                <property name="halign">center</property>
                                <child>
                                    <object class="GtkButton" id="btn_live">
                                        <property name="width-request">220</property>
                                        <property name="height-request">200</property>
                                        <child>
                                            <object class="GtkBox">
                                                <property name="orientation">vertical</property>
                                                <property name="margin-top">25</property>
                                                <property name="margin-start">25</property>
                                                <property name="margin-bottom">25</property>
                                                <property name="margin-end">25</property>
                                                <property name="spacing">25</property>
                                                <property name="valign">center</property>
                                                <property name="halign">center</property>
                                                <child>
                                                    <object class="GtkImage">
                                                        <property name="icon-name">yoyo-installer-display-with-window-symbolic</property>
                                                        <property name="pixel-size">74</property>
                                                    </object>
                                                </child>
                                                <child>
                                                    <object class="GtkLabel">
                                                        <property name="label" translatable="yes">Try Yoyo OS</property>
                                                        <style>
                                                            <class name="title-4"/>
                                                        </style>
                                                    </object>
                                                </child>
                                            </object>
                                        </child>
                                        <style>
                                            <class name="card" />
                                        </style>
                                    </object>
                                </child>
                                <child>
                                    <object class="GtkButton" id="btn_install">
                                        <property name="width-request">200</property>
                                        <property name="height-request">200</property>
                                        <child>
                                            <object class="GtkBox">
                                                <property name="orientation">vertical</property>
                                                <property name="margin-top">25</property>
                                                <property name="margin-start">25</property>
                                                <property name="margin-bottom">25</property>
                                                <property name="margin-end">25</property>
                                                <property name="spacing">25</property>
                                                <property name="valign">center</property>
                                                <property name="halign">center</property>
                                                <child>
                                                    <object class="GtkImage">
                                                        <property name="icon-name">yoyo-installer-harddisk-symbolic</property>
                                                        <property name="pixel-size">74</property>
                                                    </object>
                                                </child>
                                                <child>
                                                    <object class="GtkLabel">
                                                        <property name="label" translatable="yes">Install Yoyo OS</property>
                                                        <style>
                                                            <class name="title-4"/>
                                                        </style>
                                                    </object>
                                                </child>
                                            </object>
                                        </child>
                                        <style>
                                            <class name="card" />
                                        </style>
                                    </object>
                                </child>
                            </object>
                        </child>
                    </object>
                </child>
            </object>
        </child>
    </template>
</interface>