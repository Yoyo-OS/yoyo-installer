{
    "log_file": "/etc/yoyo/installer.log",
    "distro_name": "Yoyo OS",
    "distro_logo": "org.yoyoos.Installer", 
    "pre_run": [
        "sudo apx --sys update", 
        "sudo apx --sys install -f"
    ],
    "post_run": [
        "sudo apx --sys update", 
        "sudo apx --sys install -f"
    ],
    "tour": {
        "welcome": {
            "resource": "/org/yoyoos/Installer/assets/welcome.svg",
            "title": "Welcome to Yoyo",
            "description": "Designed to last over time and always be faithful to you."
       },
       "control": {
           "resource": "/org/yoyoos/Installer/assets/control-center.svg",
           "title": "You're in Control",
           "description": "Configure the system to your liking in the Yoyo Control Center."
       },
       "containerized": {
           "resource": "/org/yoyoos/Installer/assets/containerized.svg",
           "title": "Containerized",
           "description": "You never have to worry about breakage due to incompatible or conflicting packages."
       },
       "completed": {
           "resource": "/org/yoyoos/Installer/assets/complete.svg",
           "title": "Complete and Reliable",
           "description": "Use your system your way without anything getting in the way."
       }
    },
    "steps": {
        "welcome": {
            "template": "welcome"
        },
        "language": {
            "template": "language"
        },
        "keyboard": {
            "template": "keyboard"
        },
        "timezone": {
            "template": "timezone"
        },
        "disk": {
            "template": "disk"
        },
        "users": {
            "template": "users"
        }
    }
}
